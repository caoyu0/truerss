<div class="tm-main uk-width-medium-3-4 uk-margin-top">
    <article class="uk-article" style="width:120%;">

        <h1 class="uk-article-title">
        <% if (feed.favorite()) { %>
            <i class="uk-icon-star uk-icon unfavorite"
            data-favorite="<%= feed.id() %>"
            data-uk-tooltip title="remove from favorites"></i>
          <% } else { %>
            <i class="uk-icon-star-o uk-icon favorite"
            data-favorite="<%= feed.id() %>"
            data-uk-tooltip title="mark as favorite"></i>
          <% } %>
        <%= feed.title() %></h1>

        <div class="uk-grid">
          <div class="uk-width-1-2 uk-text-left">
            <%= moment(feed.published_date()).fromNow() %>
          </div>
          <div class="uk-width-1-2 uk-text-right">
            <a href="<%= feed.url() %>">
                <i class="uk-icon-external-link"></i>
                Original
            <a/>
          </div>

          <div class="uk-width-1-2 uk-text-left uk-margin-top">
              <button id="truerss-prev" class="uk-button uk-button-success uk-button-mini"
              type="button" data-feed-id="<%= feed.id() %>">prev</button>
            </div>
            <div class="uk-width-1-2 uk-text-right uk-margin-top">
              <button id="truerss-next" class="uk-button uk-button-success uk-button-mini"
              type="button" data-feed-id="<%= feed.id() %>">next</button>
            </div>
        </div>

        <hr class="uk-article-divider">

        <p class="uk-article-lead"><%- feed.anything() %></p>

    </article>

</div>